<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="70dp"
            android:id="@+id/img"
            app:riv_corner_radius="35dp"
            android:scaleType="fitXY"
            android:src="@drawable/iconadd"
            android:layout_height="70dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txttenuser1"
            android:textColor="#000"
            android:text="ten user"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img"
            android:layout_height="wrap_content"/>
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_below="@+id/txttenuser1"
            android:layout_toRightOf="@+id/img"
            android:theme="@style/Widget.AppCompat.RatingBar.Small"
            android:stepSize="0.01"
            android:scaleX="0.7"
            android:id="@+id/ratingdanhgianguoidung"
            android:scaleY="0.7"
            android:transformPivotX="10dp"
            android:layout_height="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_toRightOf="@+id/img"
            android:padding="5dp"
            android:text="jjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjjj"
            android:layout_below="@+id/ratingdanhgianguoidung"
            android:id="@+id/txtcommentnguoidung"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:layout_below="@+id/txtcommentnguoidung"
            android:layout_toRightOf="@+id/img"
            android:padding="7dp"
            android:text="2019/20/10"
            android:id="@+id/txtngaythangdanhgia"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>