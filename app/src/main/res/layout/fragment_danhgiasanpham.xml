<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginBottom="100dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:padding="7dp"
        android:text="Đánh Giá"
        android:textColor="#3F51B5"
        android:textSize="20sp"
        android:id="@+id/txtdanhgia"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:textColor="#3F51B5"
        android:textSize="18sp"
        android:padding="7dp"
        android:layout_alignParentRight="true"
        android:id="@+id/txtsoluongdanhgia"
        android:layout_marginRight="50dp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/txtdanhgia"
        android:padding="7dp"
        android:id="@+id/linn"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:padding="7dp"
            android:text="Comment"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <ListView
            android:layout_width="match_parent"
            android:id="@+id/listviewcomment"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:padding="7dp"
        android:text="Đánh Giá Của Bạn"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:id="@+id/txtdanhgiacuaban"
        android:textStyle="bold"
        android:layout_below="@+id/linn"
        android:layout_height="wrap_content"/>
    <RatingBar
        android:layout_width="wrap_content"
        android:numStars="5"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:id="@+id/ratingdanhgiacuabanla"
        android:layout_marginLeft="-15dp"
        android:isIndicator="false"
        android:layout_below="@+id/txtdanhgiacuaban"
        android:layout_height="60dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_below="@+id/ratingdanhgiacuabanla"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="7dp"
        android:id="@+id/edtcommentt"
        android:textColorHint="#fff"
        android:hint="nhập comment"
        android:textColor="#fff"
        android:inputType="text"
        android:background="#000"
        android:layout_height="100dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_below="@+id/edtcommentt"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="Gửi đi"
        android:id="@+id/btnguicomment"
        android:background="#000"
        android:textColor="#fff"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"/>
</RelativeLayout>
</LinearLayout>